*
  margin 0
  padding 0
  box-sizing border-box

html,
body
  position relative
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"
  min-height 100%
  min-height 100vh

body
  min-width 320px
  background-color #f4f4f4
  // @media (max-width 960px)
  //   background-color #fff

.wrapper
  margin 0 auto
  padding 0 8px
  width 100%
  @media (min-width 769px)
    padding 0 16px
    max-width 1012px
#container
  margin 45px auto 0
  @media (max-width 768px)
    margin 40px auto 0
  @media (max-width 600px)
    margin 30px auto 0
  @media (max-width 420px)
    margin 20px auto 0
.status
  padding 10px 0
.ellipsis
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  display -moz-box
  -webkit-line-clamp 1
  -moz-line-clamp 1
  -webkit-box-orient vertical
  -moz-box-orient horizontal
.ellipsis-line-2
  -webkit-line-clamp 2
  -moz-line-clamp 2
.ellipsis-line-3
  -webkit-line-clamp 3
  -moz-line-clamp 3
