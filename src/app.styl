*
  margin 0
  padding 0
  box-sizing border-box

html,
body
  position relative
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"
  min-height 100%
  min-height 100vh

html
  &[color-scheme="light"]
    color-scheme light
  &[color-scheme="dark"]
    color-scheme dark

body
  min-width 320px

.wrapper
  margin 0 auto
  padding 0 8px
  width 100%
  @media (min-width: 769px)
    padding 0 16px
    max-width 1012px
#container
  margin 45px auto 0
  @media (max-width: 768px)
    margin 38px auto 0
  @media (max-width: 600px)
    margin 28px auto 0
  @media (max-width: 420px)
    margin 18px auto 0
  .zero-spacings &
    margin-top 0
  .error-tips &
    margin-top 40px
.status
  padding 10px 0
.tips
  display flex
  justify-content center
  width 100%
  font-size 1.125rem
  text-shadow 0 0 6px rgba(0,0,0,.05)
  letter-spacing .108em
.ellipsis
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  display -moz-box
  white-space normal
  -webkit-line-clamp 1
  -moz-line-clamp 1
  -webkit-box-orient vertical
  -moz-box-orient horizontal
.ellipsis-line-2
  -webkit-line-clamp 2
  -moz-line-clamp 2
.ellipsis-line-3
  -webkit-line-clamp 3
  -moz-line-clamp 3
