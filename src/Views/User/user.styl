.cover
  position relative
  width 100%
  height 300px
  display flex
  align-items flex-end
  .bing-image
    background-repeat no-repeat
    background-position center
    background-size cover
    img
      width 100%
      height 100%
      object-fit cover
      opacity .01
      animation bing-image .3s cubic-bezier(0.44, 0.22, 0.49, 0.63) forwards
      @keyframes bing-image
        0%
          opacity .01
        100%
          opacity 1
    &,
    &:after
      content ''
      position absolute
      top 0
      right 0
      bottom 0
      left 0
    &:after
      background-color rgba(0,0,0,.15)
  &.blur
    overflow hidden
    .bing-image
      top -10px
      right -10px
      bottom -10px
      left -10px
      img
        filter blur(5px)
  .user
    position absolute
    top auto
    left 0
    right 0
    bottom 0
    margin auto
    max-width 980px
    transform translateY(50%)
    display flex
    align-items center
    justify-content center
    padding 20px 30px
    font-weight 300
    color rgba(255,255,255,.94)
    text-shadow 1px 1px 2px rgba(0,0,0,.15)
    // -------------------------------------
    ~/.blur ^[1..-1]
      bottom 70px
      transform none
