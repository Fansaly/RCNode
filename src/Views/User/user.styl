    #avatar
      width 90px
      height 90px
      padding 6px
      &:before
        content ''
        position absolute
        top 50%
        left 50%
        width 128.88889%
        height 128.88889%
        transform translate(-50%, -50%)
        background-image linear-gradient(120deg, #2196f3 34%, #ff6dd2)
      img
        position relative
        display block
        width 100%
        height 100%
        border-radius 50%
        background-color rgba(255,255,255,.73)
    .items
      position relative
      display flex
      flex-direction column
      margin-left 50px
      >div
        display flex
        flex-wrap nowrap
        &:last-child
          color #333
        ~/.blur ^[1..-1]
          color inherit
      .item
        display flex
        align-items center
        margin 8px 16px
        margin-right 0
        &:first-child
          margin-left 0
        svg
          margin-right 6px
          font-size 22px
          ../.score ^[4..-1]
            transform rotate(-15deg)
        a
          color inherit
          text-decoration none
          &:hover
            text-decoration underline
.tab-list
  position relative
  display flex
  text-align justify
  box-shadow 0 3px 6px -2px rgba(0,0,0,.3)
  .tabs
    [role="tablist"] > span
      background-color #2ac2f9
    .tab
      &[aria-selected="true"]
        color #2ac2f9
      span
        font-size 16px
.recent
  margin-top 10px

@media (max-width 600px)
  .cover
    height 240px
    align-items center
    .user
      position static
      margin 0
      padding 0
      flex-direction column
      flex-wrap wrap
      #avatar
        margin-top 16px
        margin-bottom 24px
        padding 6px
        width 106px
        height 106px
      .items
        margin-left 0
        >div
          justify-content center
        .item
          margin 4px 0

@media (max-width 420px)
  .cover
    height 198px
    .user
      #avatar
        margin-top 10px
        margin-bottom 14px
        padding 5px
        width 90px
        height 90px
      .items
        .item
          margin 2px 0
