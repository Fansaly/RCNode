#signin
  body
    #root
      .container
        ../../../,
        ../../,
        ../,
        &
          width 100%
          height 100%
#signin
  .bg
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    // object-fit cover
  .container
    position relative
    flex 1
    flex-direction column
    .area
      position relative
      width 100%
      flex-direction column
      flex-wrap wrap
      justify-content center
      align-items center
      &.top
        flex 2
      &.bot
        flex 3
      &.mid
        .logo
          margin-bottom 50px
          width 210px
          height 50px
          img
            display block
        .auth-user
          padding-bottom 20px
          display flex
          flex-wrap wrap
          flex-direction column
          align-items center
          text-align center
          .avatar,
          .name
            transition .28s opacity linear .22s,
                       .28s transform ease .22s
            transform translateY(10px)
            opacity 0
          .avatar
            width 96px
            height 96px
            margin-bottom 10px
            transform translateY(15px)
            transition-duration .3s, .3s
            transition-delay .12s, .12s
            .item
              width 100%
              height 100%
            img
              background-color transparent
          .avatar,
          .name
            ../.show ^[5..-1]
              opacity 1
              transform none
            .item
              transition .26s opacity linear,
                         .26s transform ease
              transform none
              opacity 1
              ../../.diff ^[5..-1]
                transform scale(.96)
                opacity .5
        form
          min-width 306px
          .btn
            position relative
            margin-top 40px
            text-align center
