#topic
  .topic-main,
  .topic-replies
    padding 44px 0
    background-color rgba(255,255,255,.92)
    box-shadow 0 4px 20px rgba(0,0,0,.068),
               0 2px 16px rgba(0,0,0,.006),
               0 2px 8px rgba(0,0,0,.01),
               0 0 2px rgba(0,0,0,.01),
               0 0 8px rgba(0,0,0,.03) inset
    border-radius 2px
  .topic-main
    .markdown-container
      padding 0 44px
    .title
      padding 0 44px
      font-size 22px
      font-weight 500
      margin-bottom 10px
      word-break break-word
    .topic-attrs
      display flex
      padding 0 44px 16px
      margin-bottom 24px
      font-size 12px
      color #586069
      border-bottom 1px dashed #dfe2e5
      >span
        display inline-flex
        margin-top 6px
        margin-right 20px
        align-items center
        &:last-child
          margin-right 0
        a
          color inherit
          text-decoration none
          &:hover
            text-decoration underline
        em
          font-style normal
          margin-right 4px
        svg
        .avatar
          margin-right 4px
          font-size 20px
        .avatar
          width 20px
          height 20px
  .topic-replies
    margin-top 45px
    .topic-reply
      position relative
      margin-top 18px
      &:first-child
        margin-top 0
      .reply-content
        position relative
        margin-left 80px
        margin-right 30px
        border 1px solid #dfe2e5
        border-radius 3px
        ../.hilite ^[3..-1]
          box-shadow 0 0 10px rgba(33,200,244,.9)
        &:before,
        &:after
          content ''
          position absolute
          top 11px
          right 100%
          width 0
          height 0
          border-width 8px
          border-style solid
          border-color transparent
          border-right-color #dfe2e5
        &:after
          top 12px
          border-width 7px
          border-right-color #f6f8fa
        .reply-header
          position relative
          align-items center
          padding 10px 14px
          font-size 14px
          color #666
          background-color #f6f8fa
          border-bottom 1px solid #d1d5da
          .reply-avatar
            position absolute
            top 0
            right 100%
            margin-right 16px
            ../../../.hilite ^[3..-1]
              box-shadow 0 0 10px rgba(216,10,190,.9)
            a
              display flex
            img
              width 100%
              height 100%
              display inline-flex
          .reply-attrs
            flex-direction row
            align-items center
            .group
              align-items center
              .uname-text
                width auto
                max-width 100%
                align-items center
              .uname
                color inherit
                font-weight 600
                text-decoration none
                display block
                overflow hidden
                white-space nowrap
                text-overflow ellipsis
                &:hover
                  text-decoration underline
              .text
                display block
                margin-left 6px
                padding .2em .4em
                color #21b8f3
                font-size 12px
                letter-spacing .096em
                background-color rgba(221,221,221,.18)
                white-space nowrap
                border-radius 3px
              .time
                margin-left 10px
                font-size 12px
                white-space nowrap
                span
                  margin-right 3px
          .reply-actions
            display flex
            padding-left 30px
            align-items center
            .action
              margin-left 12px
              display inline-flex
              align-items center
              font-weight 500
              padding 0
              &:first-child
                margin-left 0
              &:hover
                text-decoration none
            .num
              user-select none
              pointer-events none
        .markdown-container
          padding 14px
          color #333
          .markdown-body
            font-size 15px

        ../.owned ^[3..-1]
          border-color rgba(33,184,243,.35)
          &:before
            border-right-color rgba(33,184,243,.45)
          .reply-header
            border-bottom-color rgba(33,184,243,.18)

#topic
  @media (max-width 768px)
    .topic-main
    .topic-replies
      padding 36px 0
    .topic-main
      .markdown-container
        padding 0 20px
      .title
        padding 0 20px
        margin-bottom 8px
      .topic-attrs
        padding-left 20px
        padding-right 20px
        margin-bottom 20px
    .topic-replies
      margin-top 36px
      .topic-reply
        .reply-content
          margin 0 20px
          border-radius 2px
          &:before
          &:after
            display none
          .reply-header
            padding 6px 16px
            font-size 13px
            .reply-avatar
              position static
              margin-right 8px
              width 32px
              height 32px
          .markdown-container
            padding 12px 16px

  @media (max-width 600px)
    padding-left 0
    padding-right 0
    .topic-main
    .topic-replies
      box-shadow none
    .topic-main
      .markdown-container
        padding 0 16px
      .title
        padding 0 16px
        margin-bottom 6px
      .topic-attrs
        padding 0 16px 14px
        margin-bottom 12px
        >span
          margin-right 10px
          svg
            font-size 16px
    .topic-replies
      padding 34px 0
      background-color rgba(255,255,255,.8)
      .topic-reply
        .reply-content
          margin 0 16px
          .reply-header
            padding 6px 12px
            font-size 12px
            .reply-attrs
              .group
                align-items flex-start
                flex-direction column
                flex-wrap wrap
                .text
                  padding 0
                  background-color transparent
                .time
                  margin-left 0
            .reply-actions
              .action
                margin-left 10px
                svg
                  font-size 23px
          .markdown-container
            padding 10px 12px

  @media (max-width 520px)
    .topic-replies
      .topic-reply
        .reply-content
          margin 0 12px

  @media (max-width 420px)
    .topic-replies
      .topic-reply
        .reply-content
          .reply-header
            .reply-actions
              .action
                margin-left 9px

  @media (max-width 360px)
    .topic-replies
      .topic-reply
        .reply-content
          .reply-header
            .reply-actions
              .action
                svg
                  font-size 22px
