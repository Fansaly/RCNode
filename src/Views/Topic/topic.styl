#topic
  @media (max-width 600px)
    padding-left 0
    padding-right 0
  .topic-main,
  .topic-replies
    padding 44px 0
    background-color rgba(255,255,255,.92)
    box-shadow 0 4px 20px rgba(0,0,0,.068),
               0 2px 16px rgba(0,0,0,.006),
               0 2px 8px rgba(0,0,0,.01),
               0 0 2px rgba(0,0,0,.01),
               0 0 8px rgba(0,0,0,.03) inset
    border-radius 2px
  .topic-main
    .markdown-container
      padding 0 44px
    .title
      padding 0 44px
      font-size 22px
      font-weight 500
      margin-bottom 18px
    .attr
      padding 0 44px 16px
      margin-bottom 24px
      font-size 12px
      color #586069
      border-bottom 1px dashed #dfe2e5
      span
        position relative
        display inline-block
        margin-right 20px
        padding-left 24px
        &:last-child
          margin-right 0
        a
          color inherit
          text-decoration none
          &:hover
            text-decoration underline
        i
        em
          font-style normal
        em
          margin-right 4px
        svg
          position absolute
          top 50%
          left 0
          font-size 20px
          transform translateY(-50%)
  .topic-replies
    margin-top 45px
    .topic-reply
      position relative
      margin-top 18px
      &:first-child
        margin-top 0
      .reply-content
        position relative
        margin-left 80px
        margin-right 30px
        border 1px solid #dfe2e5
        border-radius 3px
        &:before,
        &:after
          content ''
          position absolute
          top 11px
          right 100%
          width 0
          height 0
          border-width 8px
          border-style solid
          border-color transparent
          border-right-color #dfe2e5
        &:after
          top 12px
          border-width 7px
          border-right-color #f6f8fa
        .reply-header
          position relative
          display flex
          align-items center
          padding 10px 14px
          font-size 14px
          color #666
          background-color #f6f8fa
          border-bottom 1px solid #d1d5da
          .avatar-uname
            display flex
            align-items center
            .avatar
              position absolute
              top 0
              right 100%
              margin-right 16px
              a
                display flex
              img
                width 100%
                height 100%
                display inline-flex
            >a
              color inherit
              font-weight 600
              text-decoration none
              &:hover
                text-decoration underline
          .time-etc
            flex 1
            display flex
            align-items center
            span
              margin-left 10px
              margin-right 3px
              &.special
                margin-right 0
                padding .2em .4em
                color #21b8f3
                background-color rgba(221,221,221,.18)
                border-radius 3px
            span,
            time
              font-size 12px
          .actions
            display flex
            align-items center
            .num
              user-select none
              pointer-events none
            .action
              margin-left 12px
              display inline-flex
              align-items center
              font-weight 500
              padding 0
              &:first-child
                margin-left 0
              &:hover
                text-decoration none
        .markdown-container
          padding 14px
          color #333
          .markdown-body
            font-size 15px

        ../.owned ^[3..-1]
          border-color rgba(33,184,243,.35)
          &:before
            border-right-color rgba(33,184,243,.45)
          .reply-header
            border-bottom-color rgba(33,184,243,.18)


  @media (max-width 768px)
    .topic-main
    .topic-replies
      padding 26px 0
    .topic-main
      .markdown-container
        padding 0 20px
      .title
        padding 0 20px
        margin-bottom 8px
      .attr
        padding-left 20px
        padding-right 20px
        margin-bottom 20px
        span
          margin-top 8px
    .topic-replies
      margin-top 36px
      .topic-reply
        .reply-content
          margin 0 18px
          &:before
          &:after
            display none
          .reply-header
            padding 6px 12px
            font-size 13px
            .avatar-uname
              .avatar
                position static
                margin-right 6px
                width 30px
                height 30px
            .time-etc
              span
              time
                margin-right 0
                margin-left 6px
          .markdown-container
            padding 12px
            .markdown-body
              font-size 14px

  @media (max-width 600px)
    .topic-main
    .topic-replies
      padding 24px 0
      .markdown-container
        padding 0 14px
      .title
        padding 0 14px
        margin-bottom 6px
      .attr
        padding 0 14px 14px
        margin-bottom 12px
        span
          margin-right 10px
          svg
            font-size 16px
    .topic-replies
      .topic-reply
        .reply-content
          margin 0 10px
          .reply-header
            padding-top 5px
            padding-bottom 5px
            .time-etc
              span
                display none
            .actions
              .action
                svg
                  font-size 23px

  @media (max-width 500px)
    .topic-main
    .topic-replies
      padding 22px 0
    .topic-replies
      .topic-reply
        .reply-content
          .reply-header
            padding-top 4px
            padding-bottom 4px
            .avatar-uname
              >a
                display none

  @media (max-width 420px)
    .topic-main
    .topic-replies
      padding 20px 0
      .title
        margin-bottom 4px
      .attr
        span
          padding-left 14px
          svg
            font-size 12px
    .topic-replies
      .topic-reply
        .reply-content
          margin 0 8px

  @media (max-width 360px)
    .topic-replies
      .topic-reply
        .reply-content
          .reply-header
            .actions
              .action
                svg
                  font-size 22px
