#topic
  @media (max-width 600px)
    padding-left 0
    padding-right 0
  .topic-main,
  .topic-replies
    padding 44px 0
    background-color rgba(255,255,255,.92)
    box-shadow 0 4px 20px rgba(0,0,0,.068),
               0 2px 16px rgba(0,0,0,.006),
               0 2px 8px rgba(0,0,0,.01),
               0 0 2px rgba(0,0,0,.01),
               0 0 8px rgba(0,0,0,.03) inset
    border-radius 2px
    @media (max-width 768px)
      padding 20px 0
  .topic-main
    .markdown-container
      padding 0 44px
      @media (max-width 768px)
        padding 0 20px
      @media (max-width 600px)
        padding 0 14px
    .title
      padding 0 44px
      font-size 22px
      font-weight 500
      margin-bottom 18px
      @media (max-width 768px)
        padding 0 20px
        margin-bottom 8px
      @media (max-width 600px)
        padding 0 14px
        margin-bottom 6px
      @media (max-width 420px)
        margin-bottom 4px
    .attr
      padding 0 44px 16px
      margin-bottom 24px
      font-size 12px
      color #586069
      border-bottom 1px dashed #dfe2e5
      @media (max-width 768px)
        padding-left 20px
        padding-right 20px
        margin-bottom 20px
      @media (max-width 600px)
        padding 0 14px 14px
        margin-bottom 12px
      span
        position relative
        display inline-block
        margin-right 20px
        padding-left 24px
        &:last-child
          margin-right 0
        @media (max-width 768px)
          margin-top 8px
        @media (max-width 600px)
          margin-right 10px
        @media (max-width 420px)
          padding-left 14px
        a
          color inherit
          text-decoration none
          &:hover
            text-decoration underline
        i
        em
          font-style normal
        em
          margin-right 4px
        svg
          position absolute
          top 50%
          left 0
          font-size 20px
          transform translateY(-50%)
          @media (max-width 600px)
            font-size 16px
          @media (max-width 420px)
            font-size 12px
  .topic-replies
    margin-top 45px
    @media (max-width 768px)
      margin-top 40px
    .topic-reply
      position relative
      margin-top 18px
      &:first-child
        margin-top 0
      .reply-content
        position relative
        margin-left 80px
        margin-right 30px
        border 1px solid #dfe2e5
        border-radius 3px
        @media (max-width 768px)
          margin 0 18px
        @media (max-width 600px)
          margin 0 10px
        @media (max-width 420px)
          margin 0 8px
        &:before,
        &:after
          content ''
          position absolute
          top 11px
          right 100%
          width 0
          height 0
          border-width 8px
          border-style solid
          border-color transparent
          border-right-color #dfe2e5
          @media (max-width 768px)
            display none
        &:after
          top 12px
          border-width 7px
          border-right-color #f6f8fa
          @media (max-width 768px)
            top 9px
        .reply-header
          position relative
          display flex
          align-items center
          padding 10px 14px
          font-size 14px
          color #666
          background-color #f6f8fa
          border-bottom 1px solid #d1d5da
          @media (max-width 768px)
            padding 5px 12px
            font-size 13px
          .avatar-uname
            display flex
            align-items center
            .avatar
              position absolute
              top 0
              right 100%
              margin-right 16px
              @media (max-width 768px)
                position static
                margin-right 6px
                width 30px
                height 30px
              a
                display flex
              img
                width 100%
                height 100%
                display inline-flex
            >a
              color inherit
              font-weight 600
              text-decoration none
              &:hover
                text-decoration underline
              @media (max-width 500px)
                display none
          .time-etc
            flex 1
            display flex
            align-items center
            span
              margin-left 10px
              margin-right 3px
              &.special
                margin-right 0
                padding .2em .4em
                color #21b8f3
                background-color rgba(221,221,221,.18)
                border-radius 3px
              @media (max-width 320px)
                display none
            span,
            time
              font-size 12px
              @media (max-width 768px)
                margin-left 6px
              @media (max-width 600px)
                margin-left 2px
          .actions
            display flex
            align-items center
            .num
              user-select none
              pointer-events none
            .action
              margin-left 12px
              display inline-flex
              align-items center
              font-weight 500
              padding 0
              @media (max-width 768px)
                margin-left 8px
              @media (max-width 600px)
                margin-left 6px
              &:first-child
                margin-left 0
              &:hover
                text-decoration none
              svg
                @media (max-width 600px)
                  font-size 22px
                @media (max-width 360px)
                  font-size 20px
        .markdown-container
          padding 14px
          color #333
          @media (max-width 768px)
            padding 12px
          .markdown-body
            font-size 15px
            @media (max-width 768px)
              font-size 14px

        ../.owned ^[3..-1]
          border-color rgba(33,184,243,.35)
          &:before
            border-right-color rgba(33,184,243,.45)
          .reply-header
            border-bottom-color rgba(33,184,243,.18)
